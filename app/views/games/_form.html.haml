= simple_form_for(@game) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :required => true
    = f.input :active
    = f.input :address
    = f.association :city, :collection => City.order(:name)
    = f.association :game_category, :collection => GameCategory.order(:name)
    = f.association :house, :collection => House.order(:name)
    = f.input :phone
    = f.input :email
    = f.input :website
    = f.input :facebook
    = f.input :twitter
    = f.input :instagram
    = f.input :lat
    = f.input :lng
    = f.input :story, :input_html => {:rows => 10}
    = f.input :game_times

  .form-actions
    = f.button :submit, :class => 'button small radius small-offset-12 large-offset-18'

