%fieldset
  %legend
    = GameCategory.model_name.human
  .row
    .small-8.columns.text_bold
      = t('activerecord.attributes.game_category.name')
    .small-16.columns
      = @game_category.name
  .row
    .small-8.columns.text_bold
      = t('created_at')
    .small-16.columns
      = format_time(@game_category.created_at)
  .row
    .small-8.columns.text_bold
      = t('updated_at')
    .small-16.columns
      = format_time(@game_category.updated_at)

.row
  .small-12.columns.small-offset-1
    - if signed_in?
      = link_to t('edit'), edit_game_category_path(@game_category), :class => 'button'
      = link_to t('delete'), @game_category, :method => :delete, :data => {:confirm => t('are_you_sure')}, :class => 'button'
    = link_to t('back'), game_categories_path, :class => 'button'

