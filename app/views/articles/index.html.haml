%h1
  = t('articles').titleize

%table
  %thead
    %tr
      %th Title
      %th Publish
      %th Publish time
      %th Game
      %th Picture
      %th Content
      %th Created by
      %th Updated by
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.publish
        %td= article.publish_time
        %td= article.game
        %td= article.picture
        %td= article.content
        %td= article.created_by
        %td= article.updated_by
        %td= link_to fonticon('eye'), article, :title => t('show')
        %td= link_to fonticon('pencil'), edit_article_path(article), :title => t('edit')
        %td= link_to fonticon('x', 'red'), article, :method => :delete, :data => {:confirm => t('are_you_sure')}, :title => t('delete')

%br

= link_to t('new_article'), new_article_path, :class => 'button small radius'

