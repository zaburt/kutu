= simple_form_for(@game_comment) do |f|
  = f.error_notification

  .form-inputs
    = f.association :game, :collection => Game.order(:name), :include_blank => false
    = f.input :comment, :input_html => {:rows => 10}
    =# f.association :user, :collection => User.order(:display_name), :disabled => true
    =# f.association :user, :collection => User.order(:display_name), :input_html => {:readonly => true}
    = f.hidden_field :user_id, :value => current_user.id

  .form-actions
    = f.button :submit, :class => 'button small radius small-offset-12 large-offset-18'

