.row
  .article_gallery.small-23.columns.small-centered
    - @articles.each do |article|
      /= link_to image_tag(article.picture.image(:medium))
      %a{:href => article_path(article), :title => article.title, :class => random_rotation_class}
        = image_tag article.picture.image(:medium), :alt => article.title, :title => article.title

:javascript
  $('.article_gallery a').draggable({
    // cursor: 'move'
    scroll: false,
    containment: '#main',
    opacity: 0.8
  });


