= simple_form_for(@picture) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :caption
    = f.association :game, :collection => Game.order(:name)
    = f.input :image, :as => :file

  .form-actions
    = f.button :submit, :class => 'button small radius small-offset-18'


