.row
  %nav.top-bar.column{'data-topbar' => ''}
    %ul.title-area
      %li.name
        %h1
          %a{:href => '/'}
            %i.fi-home
            %i
              Schrodingiller
      %li.toggle-topbar
        %a{:href => '#'}
          %span
            Menu

    %section.top-bar-section
      %ul
        %li
          = link_to article_categories
        %li
          = link_to articles
        %li
          = link_to cities
        %li
          = link_to game_categories
        %li
          = link_to game_comments
        %li
          = link_to games
        %li
          = link_to houses
        %li
          = link_to pictures
      %ul.right
        - if signed_in?
          %li
            = link_to current_user.email, edit_user_registration_path
          %li
            = link_to t('logout'), destroy_user_session_path, method: :delete
        - else
          %li
            = link_to t('devise.shared.links.sign_up'), new_user_registration_path
          %li
            = link_to t('devise.shared.links.sign_in'), new_user_session_path

