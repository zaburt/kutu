.row
  %nav.top-bar.column{'data-topbar' => ''}
    %ul.title-area
      %li.name
        %h1
          %a{:href => '/'}
            %i.fi-home
            %i
              Schrodingiller
      %li.toggle-topbar
        %a{:href => '#'}
          %span
            Menu

    %section.top-bar-section
      %ul
        %li
          = link_to 'article_categories', article_categories_path
        %li
          = link_to 'articles', articles_path
        %li
          = link_to 'cities', cities_path
        %li
          = link_to 'game_categories', game_categories_path
        %li
          = link_to 'game_comments', game_comments_path
        %li
          = link_to 'games', games_path
        %li
          = link_to 'houses', houses_path
        %li
          = link_to 'pictures', pictures_path
      %ul.right
        - if signed_in?
          %li
            = link_to current_user.email, edit_user_registration_path
          %li
            = link_to t('logout'), destroy_user_session_path, method: :delete
        - else
          %li
            = link_to t('devise.shared.links.sign_up'), new_user_registration_path
          %li
            = link_to t('devise.shared.links.sign_in'), new_user_session_path

